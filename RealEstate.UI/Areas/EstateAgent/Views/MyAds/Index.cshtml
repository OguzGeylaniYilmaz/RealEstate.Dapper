@model List<RealEstate.UI.Dtos.ProductDtos.ResultAdsListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/EstateAgent/Views/Agent/Index.cshtml";
}



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Product Title</th>
                                <th scope="col">City</th>
                                <th scope="col">District</th>
                                <th scope="col">Category</th>
                                <th scope="col">Price</th>
                                <th scope="col">Type</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Details</th>
                                <th scope="col">Deal Of The Day</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ProductID</th>
                                    <td>@item.Title</td>
                                    <td>@item.City</td>
                                    <td>@item.District</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Price>
                                    <td>@item.Type</td>
                                    <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-info">Edit</a></td>
                                    <td><a href="/Product/ProductDetails/@item.ProductID" class="btn btn-outline-warning">Details</a></td>
                                    <td><a href="/Product/ChangeStatus/@item.ProductID" class="btn btn-outline-secondary">Change Status</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct" class="btn btn-success">New Product</a>
                </div>
            </div>
        </div>
    </div>
</div>